{
    "name": "@0x84d0u/coolui",
    "version": "0.1.0",
    "exports": {
        ".": {
            "types": "./dist/index.server.d.ts",
            "import": "./dist/index.server.mjs",
            "require": "./dist/index.server.js"
        },
        "./client": {
            "types": "./dist/index.client.d.ts",
            "import": "./dist/index.client.mjs",
            "require": "./dist/index.client.js"
        },
        "./utils": {
            "types": "./dist/utils.d.ts",
            "import": "./dist/utils.mjs",
            "require": "./dist/utils.js"
        },
        "./theme.css": "./src/index.css"
    },
    "scripts": {
        "build:css": "tailwindcss -i src/index.css -o dist/theme.css && cp src/index.css dist/theme.tw.css",
        "build:js": "tsup",
        "build": "npm run clean && npm run build:js && npm run build:css",

        "dev:js": "tsup --watch",
        "dev:css": "tailwindcss -i src/index.css -o dist/theme.css --watch",
        "dev": "concurrently \"npm:dev:js\" \"npm:dev:css\"",

        "clean": "rm -rf dist",
        "check": "tsc --noEmit"
    },
    "peerDependencies": {
        "react": ">=18",
        "react-dom": ">=18"
    },
    "devDependencies": {
        "@types/react": "latest",
        "concurrently": "latest",
        "tsup": "latest",
        "typescript": "latest"
    },
    "dependencies": {
        "tailwindcss": "^4.1.15",
        "@tailwindcss/cli": "^4.1.15",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "lucide-react": "^0.546.0",
        "next-themes": "^0.4.6",
        "tailwind-merge": "^3.3.1"
    }
}